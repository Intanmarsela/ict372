<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button Styles -->
    <style name="ButtonPurplePill">
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/bg_button_purple_pill</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <!-- Input Field Styles -->
    <style name="InputFieldBlue">
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/bg_input_filled_blue</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="InputFieldPurple">
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/bg_input_stroke_purple</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <!-- Card Style -->
    <style name="CardWhiteRounded">
        <item name="android:background">@drawable/bg_card_white_rounded</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Chip Style -->
    <style name="ChipGrey">
        <item name="android:background">@drawable/bg_chip_grey</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <!-- Status Pill Style -->
    <style name="StatusDelivered">
        <item name="android:background">@drawable/bg_status_delivered</item>
        <item name="android:textColor">@color/success_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <!-- Text Styles -->
    <style name="TextPrimary">
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextSecondary">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextPurple">
        <item name="android:textColor">@color/primary_purple</item>
    </style>

    <!-- Toolbar Style -->
    <style name="ToolbarWhite">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>
